<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
<html>
<head>
	<link rel = "shortcut icon" media = "all" type = "image/png" href = "/logos/favicon.ico">
	<script src = "/libs/jquery-3.4.1.min.js" type = "text/javascript"> </script>
	<script src = "/libs/popper.min.js" type = "text/javascript"> </script>
	<script src = "/libs/bootstrap/bootstrap.min.js" type = "text/javascript"></script>
	<script src = "/libs/moment.js" type = "text/javascript"></script>
	<script src = "/libs/bootstrap/tempusdominus-bootstrap-4.min.js" type = "text/javascript"></script>
	<script src = "/libs/datePickerLib.js" type = "text/javascript"> </script>
	<script src = "/libs/reserve.js" type = "text/javascript"> </script>
	<script src = "/libs/starRating.js" type = "text/javascript"> </script>
	<script src = "/libs/jquery.rateyo.min.js" type = "text/javascript"> </script>
	<script src = "/libs/feedback.js" type = "text/javascript"></script>
	<script src = "/libs/comment.js" type = "text/javascript"></script>
	<script src = "/libs/favorite.js" type = "text/javascript"></script>
	<link rel = "stylesheet" media = "all" type = "text/css" href = "/css/bootstrap/bootstrap.min.css">
	<link rel = "stylesheet" media = "all" type = "text/css" href = "/fontawesome/css/all.css">
	<link rel = "stylesheet" media = "all" type = "text/css" href = "/css/bootstrap/tempusdominus-bootstrap-4.min.css">
	<link rel="stylesheet" media = "all" type="text/css" href="/css/details.css">
	<link rel="stylesheet" media = "all" type="text/css" href="/css/view.css">
	<link rel="stylesheet" media = "all" type="text/css" href="/css/jquery.rateyo.min.css">
</head>
<body>
	{{>navbar}}
	<div class = "details">
		<img id = "spaceimg" src = "/images/{{image}}"> </img> <br>
			<div class = "description">
				<h2 id = "location">{{locationName}}</h2> <br>
				Purpose: {{purpose}} <br>
				Address: {{address}} <br>
				Price: {{price}} <br>
				Capacity: {{capacity}} <br>
			</div>
		<hr>
	</div>

	<div class = "container-fluid padding">	
        <div class = "row padding">
            <div class = "col-lg-6">
				<div class = "favorite">
					{{#if accountID}}
						<button id = "favorite" class = "btn btn-primary">Add to Favorites</button>
					{{/if}}
				</div>
			</div>
			<div class = "col-lg-6">
				<div class = "reserve">
					{{#if accountID}}
						{{>reserve}}
					{{/if}}
				</div>
			</div>
		</div>
	</div>
	<div id = "feedbackInput"></div>
	<div id = "feedback"></div>

	{{#if accountID}}
		<script>
			setUpFavorite("{{_id}}", "{{locationName}}");
		</script>
		<script>
			loadFeedbackInput("{{_id}}");
		</script>
	{{/if}}
	<script>
		loadFeedback("{{_id}}");
	</script>
	{{>parallax}}
	{{>footer}}
</body>
</html>